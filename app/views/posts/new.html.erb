<h2>Add new post</h2>
<%= form_for :post, url: posts_path do |f| %>
  <p>
    name<br>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
  </p>
  <p>
    text<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit({:class => 'btn btn-primary'}) %>
  </p>
<% end %>
